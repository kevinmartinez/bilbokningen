header.header-main
  h1.heading-main VÃ¤lkommen till Bilbokningen
  include partials/menu.pug
main
  section
h3 Add Car to database
form(method="POST" action="" onSubmit="refreshPage()")
  label(for="model") Model
    input(name="model", required)
  label(for="seats") Seats
    select(name="seats")
      option(value="2") 2
      option(value="4") 4
      option(value="5") 5
  label(for="isAuto") Auto
    input(type="hidden" name="isAuto" value="false")
    input(type="checkbox" onclick="this.previousSibling.value=true")
  label(for="hasRoofrack") Roofrack
    input(type="hidden" name="hasRoofrack" value="false")
    input(type="checkbox" onclick="this.previousSibling.value=true")
  label(for="price") Price/Day
    input(name="price", required)
    input(type="submit")
div.container
  table.table.table-striped
    thead
      tr
        th Model
        th Seats
        th Auto
        th Roofrack
        th Price/day
    tbody
    if results
      each result in results
        tr
          td #{result.model} 
          td #{result.seats}
          td #{result.isAuto} 
          td #{result.hasRoofrack} 
          td #{result.price}
include partials/footer.pug
script(src='/javascripts/manage.js')

